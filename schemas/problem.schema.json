{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Binary QUBO problem schema",
  "type": "object",
  "required": ["variables", "linear"],
  "properties": {
    "variables": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string" },
      "uniqueItems": true
    },
    "linear": {
      "type": "object",
      "additionalProperties": { "type": "number" }
    },
    "quadratic": {
      "type": "array",
      "items": {
        "type": "array",
        "minItems": 3,
        "maxItems": 3,
        "items": [
          { "type": "string" },
          { "type": "string" },
          { "type": "number" }
        ]
      },
      "default": []
    },
    "constraints": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type"],
        "properties": {
          "type": { "enum": ["linear_eq", "linear_ineq", "at_most_k", "xor"] },
          "label": { "type": "string" },
          "lhs": {
            "type": "object",
            "additionalProperties": { "type": "number" }
          },
          "rhs": { "type": "number" }
        },
        "additionalProperties": false
      },
      "default": []
    },
    "best_known": {
      "type": "object",
      "required": ["value"],
      "properties": {
        "value": { "type": "number" },
        "label": { "type": "string" }
      },
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true,
      "default": {}
    }
  },
  "additionalProperties": false
}
